/* ================================================
   INDIAN ARCHITECTURE - INTERACTIVE EXPERIENCE
   Fast, Smooth, Innovative Storytelling
   ================================================ */

:root {
  --primary-gold: #DAA520;
  --secondary-brown: #8B4513;
  --accent-copper: #C19A6B;
  --dark-bg: #1a1410;
  --light-text: #F5E6D3;
  
  --fast: 0.3s;
  --smooth: 0.6s;
  --dramatic: 1.2s;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--dark-bg);
  color: var(--light-text);
  overflow-x: hidden;
  line-height: 1.6;
}

/* ================================================
   ANIMATED PARTICLES BACKGROUND
   ================================================ */

.particles-container {
  position: fixed;
  inset: 0;
  pointer-events: none;
  z-index: 0;
}

.particle {
  position: absolute;
  width: 3px;
  height: 3px;
  background: var(--primary-gold);
  border-radius: 50%;
  opacity: 0;
  animation: floatParticle 8s infinite ease-in-out;
}

@keyframes floatParticle {
  0%, 100% {
    opacity: 0;
    transform: translateY(0) translateX(0) scale(0);
  }
  50% {
    opacity: 0.6;
    transform: translateY(-100vh) translateX(50px) scale(1);
  }
}

/* ================================================
   HERO SECTION - LANDING
   ================================================ */

.hero-section {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  position: relative;
  overflow: hidden;
}

/* Mandala decorative pattern (behind hero content) */
.mandala-pattern {
  position: absolute;
  left: 50%;
  top: 12%;
  transform: translateX(-50%);
  width: 260px;
  height: 260px;
  z-index: 4;
  color: rgba(245,230,211,0.14); /* subtle warm tone */
  pointer-events: none;
  user-select: none;
  animation: mandalaRotate 30s linear infinite;
}

.mandala-svg {
  width: 100%;
  height: 100%;
  display: block;
}

.mandala-svg circle,
.mandala-svg line {
  stroke: currentColor;
  stroke-width: 1.1;
  fill: none;
  stroke-linecap: round;
  stroke-linejoin: round;
}

@media (max-width: 768px) {
  .mandala-pattern {
    width: 160px;
    height: 160px;
    top: 6%;
  }
}

.hero-content {
  text-align: center;
  z-index: 10;
  animation: fadeInUp 1s ease;
}

.hero-title {
  font-size: clamp(2.5rem, 8vw, 5rem);
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: 1.5rem;
}

.title-line {
  display: block;
  opacity: 0;
  animation: slideInLine 0.8s ease forwards;
}

.title-line:nth-child(1) {
  animation-delay: 0.2s;
}

.title-line:nth-child(2) {
  animation-delay: 0.4s;
}

.title-line:nth-child(3) {
  animation-delay: 0.6s;
}

.animate-gradient {
  background: linear-gradient(120deg, var(--primary-gold), var(--accent-copper), var(--primary-gold));
  background-size: 200% auto;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradientShift 3s ease infinite;
}

@keyframes gradientShift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

@keyframes slideInLine {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.hero-subtitle {
  font-size: clamp(1rem, 3vw, 1.5rem);
  color: rgba(245, 230, 211, 0.7);
  margin-bottom: 3rem;
  opacity: 0;
  animation: fadeIn 1s ease 0.8s forwards;
}

.start-btn {
  background: linear-gradient(135deg, var(--primary-gold), var(--secondary-brown));
  color: white;
  font-size: 1.2rem;
  font-weight: 700;
  padding: 1.2rem 3rem;
  border: none;
  border-radius: 50px;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  gap: 1rem;
  transition: all var(--fast);
  box-shadow: 0 10px 30px rgba(218, 165, 32, 0.3);
  opacity: 0;
  animation: fadeIn 1s ease 1s forwards;
}

.start-btn:hover {
  transform: translateY(-5px) scale(1.05);
  box-shadow: 0 15px 40px rgba(218, 165, 32, 0.5);
}

.btn-arrow {
  transition: transform var(--fast);
}

.start-btn:hover .btn-arrow {
  transform: translateX(10px);
}

/* ================================================
   HERO VISUALS - ANIMATED SHAPES
   ================================================ */

.hero-visuals {
  position: absolute;
  inset: 0;
  pointer-events: none;
  overflow: hidden;
  opacity: 0.15;
}

.visual-element {
  position: absolute;
  background: var(--primary-gold);
  opacity: 0.2;
  filter: blur(60px);
  animation: morphShape 10s infinite ease-in-out;
}

.temple-shape {
  width: 300px;
  height: 400px;
  top: 10%;
  left: 10%;
  clip-path: polygon(50% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
  animation-delay: 0s;
}

.fort-shape {
  width: 400px;
  height: 300px;
  bottom: 10%;
  right: 10%;
  clip-path: polygon(0% 20%, 20% 0%, 80% 0%, 100% 20%, 100% 100%, 0% 100%);
  animation-delay: 3s;
}

.modern-shape {
  width: 250px;
  height: 450px;
  top: 40%;
  right: 20%;
  clip-path: polygon(30% 0%, 70% 0%, 100% 100%, 0% 100%);
  animation-delay: 6s;
}

@keyframes morphShape {
  0%, 100% {
    transform: translateY(0) rotate(0deg) scale(1);
  }
  33% {
    transform: translateY(-50px) rotate(5deg) scale(1.1);
  }
  66% {
    transform: translateY(30px) rotate(-5deg) scale(0.9);
  }
}

/* ================================================
   EXPERIENCE CONTAINER
   ================================================ */

.experience-container {
  position: fixed;
  inset: 0;
  background: rgba(26, 20, 16, 0.95);
  backdrop-filter: blur(20px);
  z-index: 100;
  display: none; /* Hidden by default */
  flex-direction: column;
  opacity: 0;
  transition: opacity var(--smooth);
}

.experience-container:not([hidden]) {
  display: flex; /* Show as flex when not hidden */
  opacity: 1;
}

/* ================================================
   STORY NAVIGATION
   ================================================ */

.story-nav {
  display: flex;
  justify-content: center;
  gap: 1rem;
  padding: 2rem;
  z-index: 10;
}

.nav-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid var(--primary-gold);
  background: transparent;
  cursor: pointer;
  transition: all var(--fast);
  padding: 0;
}

.nav-dot:hover {
  transform: scale(1.5);
  box-shadow: 0 0 15px var(--primary-gold);
}

.nav-dot.active {
  background: var(--primary-gold);
  transform: scale(1.3);
  box-shadow: 0 0 20px var(--primary-gold);
}

/* ================================================
   CHAPTER VIEWER
   ================================================ */

.chapter-viewer {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  overflow: hidden;
  position: relative;
}

.chapter {
  max-width: 1200px;
  width: 100%;
  opacity: 0;
  transform: translateX(100px);
  transition: all var(--smooth);
}

.chapter.active {
  opacity: 1;
  transform: translateX(0);
}

.chapter.exit-left {
  transform: translateX(-100px);
  opacity: 0;
}

.chapter-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
}

.chapter-visual {
  min-height: 300px;
  background: linear-gradient(135deg, var(--primary-gold) 0%, var(--secondary-brown) 100%);
  border-radius: 20px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: 2px solid rgba(218, 165, 32, 0.3);
  animation: pulse 2s infinite;
}

.chapter-image {
  width: 100%;
  height: 100%;
  min-height: 300px;
  object-fit: cover;
  border-radius: 20px;
  animation: fadeIn 0.8s ease;
  display: block;
}

.chapter-visual.has-image {
  padding: 0;
  background: transparent;
}

.chapter-visual::before {
  content: '';
  position: absolute;
  inset: 0;
  border: 2px solid var(--primary-gold);
  border-radius: 20px;
  opacity: 0.3;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.6;
  }
}

.visual-svg {
  width: 100%;
  height: 100%;
  filter: drop-shadow(0 10px 30px rgba(218, 165, 32, 0.3));
  animation: floatVisual 4s infinite ease-in-out;
}

@keyframes floatVisual {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
}

.chapter-text {
  animation: fadeInRight 0.8s ease;
}

.chapter-title {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 800;
  margin-bottom: 1rem;
  background: linear-gradient(120deg, var(--primary-gold), white);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.chapter-description {
  font-size: 1.1rem;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 1.5rem;
}

.chapter-story {
  font-size: 1rem;
  line-height: 1.7;
  color: var(--primary-gold);
  background: rgba(218, 165, 32, 0.1);
  padding: 1rem 1.5rem;
  border-left: 3px solid var(--primary-gold);
  border-radius: 8px;
  margin-bottom: 2rem;
  animation: fadeInUp 0.6s ease 0.4s backwards;
}

.chapter-highlights {
  list-style: none;
}

.highlight-item {
  padding: 0.8rem 0;
  border-left: 3px solid var(--primary-gold);
  padding-left: 1rem;
  margin-bottom: 1rem;
  transition: all var(--fast);
  opacity: 0;
  animation: slideInHighlight 0.5s ease forwards;
}

.highlight-item:nth-child(1) {
  animation-delay: 0.3s;
}

.highlight-item:nth-child(2) {
  animation-delay: 0.5s;
}

.highlight-item:nth-child(3) {
  animation-delay: 0.7s;
}

@keyframes slideInHighlight {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.highlight-item:hover {
  padding-left: 2rem;
  background: rgba(218, 165, 32, 0.1);
  border-left-width: 5px;
}

/* ================================================
   CONTROLS BAR
   ================================================ */

.controls-bar {
  display: flex;
  justify-content: center;
  gap: 1rem;
  padding: 2rem;
  border-top: 1px solid rgba(218, 165, 32, 0.2);
}

.control-btn {
  padding: 1rem 2rem;
  border: 2px solid var(--primary-gold);
  background: transparent;
  color: var(--light-text);
  font-size: 1rem;
  font-weight: 600;
  border-radius: 30px;
  cursor: pointer;
  transition: all var(--fast);
}

.control-btn:hover {
  background: var(--primary-gold);
  color: var(--dark-bg);
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(218, 165, 32, 0.4);
}

.control-btn.primary {
  background: var(--primary-gold);
  color: var(--dark-bg);
}

.control-btn.primary:hover {
  background: var(--accent-copper);
  transform: translateY(-3px) scale(1.05);
}

/* ================================================
   ANIMATIONS
   ================================================ */

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(50px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translateX(50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* ================================================
   RESPONSIVE DESIGN
   ================================================ */

@media (max-width: 768px) {
  .chapter-content {
    grid-template-columns: 1fr;
  }

  .chapter-visual {
    order: -1;
    aspect-ratio: 4/3;
  }

  .hero-title {
    font-size: 2.5rem;
  }

  .controls-bar {
    flex-wrap: wrap;
  }
}

/* ================================================
   REDUCED MOTION
   ================================================ */

@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
